        <!--end openning animation-->
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="5*"/>
                <RowDefinition Height="95*"/>

            </Grid.RowDefinitions>
            <Grid Grid.Row="0" >
                <StackPanel Orientation="Horizontal"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Right"
                            >
                    <Button x:Name="butmini"  
                            Content="-" 
                            Width="62" 
                            Command="{Binding ButMinizeCommand}"
                            Background="#1a1820"                            
                            BorderThickness="0"
                            />
                    <Grid Width="62" >
                        <Button x:Name="butfullscreen"  
                                Content="🗖" 
                                FontSize="20"
                                Width="62" 
                                Command="{Binding ButfullscreenCommand}"
                                Background="#1a1820"                            
                                BorderThickness="0"
                                >
                            <Button.ToolTip>
                                <ToolTip>
                                    <ToolTip.Template>
                                        <ControlTemplate TargetType="ToolTip">
                                            <Grid>
                                                <Border CornerRadius="5"
                                                                Opacity="0.8"
                                                                Background="#2e2e2e">
                                                    <TextBlock Text="Full screen mode"
                                                                        FontSize="12"
                                                                       Margin="8"
                                                                       Foreground="White"/>
                                                </Border>

                                            </Grid>
                                        </ControlTemplate>
                                    </ToolTip.Template>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                        <Button x:Name="butnotfullscreen"  
                                Content="🗖" 
                                Width="62" 
                                Command="{Binding ButNormalScreenCommand}"
                                Background="#1a1820"                            
                                BorderThickness="0"
                                Visibility="{Binding IsFullScreenVisible, Converter={StaticResource BooleanToVisibility}}"
                                >
                            <Button.ToolTip>
                                <ToolTip>
                                    <ToolTip.Template>
                                        <ControlTemplate TargetType="ToolTip">
                                            <Grid>
                                                <Border CornerRadius="5"
                                                                Opacity="0.8"
                                                                Background="#2e2e2e">
                                                    <TextBlock Text="Normal screen mode"
                                                                        FontSize="12"
                                                                       Margin="8"
                                                                       Foreground="White"/>
                                                </Border>

                                            </Grid>
                                        </ControlTemplate>
                                    </ToolTip.Template>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    </Grid>
                    <Button x:Name="butclose"  
                            Content="X" 
                            Width="59" 
                            Command="{Binding ButCloseCommand}"
                            Background="#1a1820"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Style="{DynamicResource ButCloseTheme}"/>
                </StackPanel>
            </Grid>
            <Border Background="#272530"
                    CornerRadius="20 "
                    Grid.Row="1">
                <Grid  >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20 *"/>
                        <ColumnDefinition Width="100*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="85" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--left side bar-->
                    <!--Logo-->
                    <TextBlock Text="TNC" 
                           FontSize="40"
                           FontWeight="Bold"
                           Foreground="#ffff"
                           Opacity="0.8" 
                           HorizontalAlignment="Left"
                           Margin="124,17,0,0" Width="79" Height="55" VerticalAlignment="Top"/>
                    <TextBlock Text="tech save the world" 
                           FontSize="9"
                           FontWeight="Bold"
                           Foreground="#ffff"
                           Opacity="0.8"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           Margin="123,0,0,10"  Width="90" Height="12"/>
                    <Image Source="Image\logocam2.png" Margin="0,0,70,0"/>
                    <!--end Logo-->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>

                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="400*"/>
                            <RowDefinition Height="30*"/>

                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" >
                            <RadioButton  Content="All Cam"
                                      FontSize="20"
                                      Height="50"
                                      Foreground="White"
                                      Style="{StaticResource MenuButtonTheme}"
                                      IsChecked="True"
                                      Command="{Binding AllCamCommand}"/>
                            <RadioButton  Content="Single Cam"
                                      FontSize="20"
                                      Height="50"
                                      Foreground="White"
                                      Style="{StaticResource MenuButtonTheme}"
                                      Command="{Binding SingleCamCommand}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <Label Content="Camera link list"
                                   Foreground="White"
                                   Opacity="0.8"
                                   FontWeight="Bold"
                                   Margin="5"
                                   />

                        </StackPanel>
                        <Grid Grid.Row="2">
                            <Grid>
                                <Grid.RowDefinitions >
                                    <RowDefinition Height="118*" />
                                    <RowDefinition Height="70*" />
                                    <RowDefinition Height="13*" />
                                </Grid.RowDefinitions>

                                <ListView ItemsSource="{Binding ListOfCams}"
                                          Grid.RowSpan="2"
                                          x:Name="LvCamera"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      SelectedItem="{Binding SelectedCam}"
                                      ItemContainerStyle="{StaticResource ListCamsLink}">

                                </ListView>
                                <!--<ListView Name="lvlinkcam" 
                              ItemsSource="{Binding ListOfCams}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Link Camera" Width="210">
