                                                <DataTemplate>
                                                    <Grid>
                                                        <TextBlock Text="{Binding CamLink}"></TextBlock>
                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>-->
                                <Grid x:Name="ThePreViewGrid" 
                                    Margin="5"
                                      Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100*"/>

                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions >
                                        <RowDefinition Height="100*" />
                                    </Grid.RowDefinitions>

                                </Grid>
                                <!---avater,username and setting button-->
                                <Grid Grid.Row="1"
                                      Grid.Column="0" Margin="0,137,0,-32"
                                      Background="#1f1e26" Grid.RowSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80 *"/>
                                        <ColumnDefinition Width="20*"/>
                                    </Grid.ColumnDefinitions>


                                    <StackPanel 
                                            Orientation="Horizontal">
                                        <Border x:Name="status"
                                                Margin="10,5,5,5"
                                                Height="35"
                                                Width="35"
                                                CornerRadius="25">
                                            <Border.Background>
                                                <ImageBrush Stretch="Fill"
                                                                x:Name="avatarimg"
                                                                ImageSource="{Binding AvatarSrc}"/>
                                            </Border.Background>

                                        </Border>
                                        <Label Content="@"
                                           Foreground="#eeeeee"
                                           VerticalAlignment ="Center"
                                           FontSize="17"
                                            />
                                        <Label Content="{Binding userName}"
                                           Foreground="#eeeeee"
                                           VerticalAlignment ="Center"
                                               Margin="-10,0,0,0"
                                           FontSize="17"
                                            />
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="35"
                                            Height="35"
                                            Command="{Binding CurrentViewSettingCommand}" 
                                            Style="{DynamicResource SettingButtonTheme}"                           
                                            >
                                        <Image Source="{Binding IsSettingImageURL}"
                                               Margin="3"/>
                                        <Button.ToolTip>
                                            <ToolTip>
                                                <ToolTip.Template>
                                                    <ControlTemplate TargetType="ToolTip">
                                                        <Grid>
                                                            <Border CornerRadius="5"
                                                                Opacity="0.8"
                                                                Background="#2e2e2e">
                                                                <TextBlock Text="{Binding SettingButtonContent}"
                                                                        FontSize="12"
                                                                       Margin="8"
                                                                       Foreground="White"/>
                                                            </Border>

                                                        </Grid>
                                                    </ControlTemplate>
                                                </ToolTip.Template>
                                            </ToolTip>
                                        </Button.ToolTip>
                                    </Button>
                                </Grid>
                                <!---end avater,username and setting button-->

                            </Grid>

                        </Grid>
                    </Grid>
                    <!--end left side bar-->

                    <!--detail camera streamming aka top window-->
                    <StackPanel Grid.Row="0" 
                                Grid.Column="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBox
                                Margin="2 ,10,0,0"
                            x:Name="tbadd"
                            Text="{Binding SelectedCam.CamUrl, Mode= OneWay}"
                            Height="30"
                            FontSize="20" Style="{DynamicResource ModernTexBox}" Width="1050"
                            />
                            <!--<TextBox
                                Margin="2 ,10,0,0"
                            x:Name="tbadd"
                            Text="{Binding LoadingContent , Mode= OneWay}"
                            Height="35"
                            FontSize="25" Style="{DynamicResource ModernTexBox}" Width="1050"
                            />-->
                            <!--<Button 
                            x:Name="butadd" 
                            Content="+" 
                            Grid.Column="0" 
                            Height="46" 
                            FontSize="20"
                            Margin="5"
                            Command="{Binding AddCommand}"
                            CommandParameter="{Binding ElementName=tbadd}" 
                            Style="{DynamicResource ButAddTheme}" Width="73"
                            />

                            <Button 
                            x:Name="butxoa" 
                            Content="X" 
                            Height="46" 
